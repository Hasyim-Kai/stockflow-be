generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Section =========================================================================
// 1 Outlet can have many User (1 to many)

enum Role {
  ADMIN
  EMPLOYEE
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(100)
  email    String @unique
  password String @db.VarChar(100)
  role     Role

  outlet   Outlet @relation(fields: [outletId], references: [id])
  outletId Int
}

model Outlet {
  id      Int    @id @default(autoincrement())
  name    String @db.VarChar(100)
  address String

  user User[]
}

// Product Section =========================================================================

enum QuantityUnit {
  Pcs
  Liter
  MiliLiter
  Box
  Cup
  Bottle
}

model Product {
  id                Int          @id @default(autoincrement())
  productCode       String       @unique
  name              String
  pricePerMiliLiter Float
  quantity          Float
  quantityUnit      QuantityUnit
  description       String
}

